{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@activepieces/*": ["activepieces/*"],
      "@activepieces/pieces-framework": ["activepieces/pieces-framework"],
      // "@activepieces/pieces-framework": [
      //   "activepieces/pieces-framework/index.ts"
      // ],
      "@activepieces": ["activepieces"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
